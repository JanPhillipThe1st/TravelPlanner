<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SetTravelPlan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:backgroundTint="#EA713A"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#EFE8E4"
            android:textAlignment="center"
            app:icon="@drawable/baseline_chevron_left_24"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="clip_horizontal|center_vertical"
            android:paddingVertical="5dp"
            android:paddingLeft="30dp"
            android:text="SET YOUR PLANS"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#EFE8E4"
            android:textAlignment="center"
            app:icon="@drawable/baseline_calendar_month_24"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="#000000" />

    </LinearLayout>

    <ListView
        android:id="@+id/planListView"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:divider="@color/white"
        android:dividerHeight="10dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPlan"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:backgroundTint="#EA713A"
            android:gravity="center_horizontal|center_vertical"
            app:icon="@drawable/baseline_add_circle_outline_24"
            android:textAlignment="center"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="30dp" />
    </LinearLayout>

</LinearLayout>